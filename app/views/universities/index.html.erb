<header style="margin-top: 0;">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3C0000; padding-top: 0;padding-bottom: 0;">
    <div class = "row" style="height:35px; padding-bottom: 0;">
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Back to Admin", admin_path, :class => "new-navbar-box", :method => :get %>
      </div>
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Help", admin_help_path, :class => "new-navbar-box", :method => :get %>
      </div>
    </div>
  <nav>
</header>

<div style="margin-top: 10px; padding-left: 30px; padding-right: 30px;">
  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>

  <% content_for :title, "Universities" %>

  <h1>Universities</h1>

  <hr style="height: 3px; border: 0px solid #696969; border-top-width: 1px;" >

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm-auto">
        <%= button_to "Universities", universities_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Nominators', representatives_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Students', students_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Questions', questions_path, :class => "data-button", :method => :get %>
      </div>
    </div>
  </div>

  <br><br>

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm">
        <div class="current-nominee-count" style="padding-top: 15px; margin-left: auto;">
          <div style="margin-left: auto; margin-right: auto; text-align:center;">
            <%=image_tag("person pictogram.png", size: "140x100")%>
            <p class="nominee-count-text"><%= @max_lim %></p>
            <p class="nominee-count-text" style = "font-size: 24px;">Default Nominee Limit</p>
          </div>
        </div>
      </div>
      <div class="col-sm">
        <div class="update-nominee-count" style="padding-top: 45px; padding-bottom: 45px; margin-right: auto; margin-left: auto;">
          <div style="margin-left: auto; margin-right: auto; text-align:center;">
            <p class="nominee-count-text" style = "font-size: 24px; color:black; margin-left: auto; margin-right: auto;">Update Default Nominee Limit</p>
            <div>
              <form action="/universities/update_max" method="get" accept-charset="UTF-8" >
                <input id="max_lim" name="max_lim" type="number" />
                <input class="update-limit" id="limit-input-field" name="commit" type="submit" value="Update Default Limit" />
              </form>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm">
      <div class="update-nominee-count" style="padding-top: 45px; padding-bottom: 45px; margin-right: auto;">
        <div style="margin-left: auto; margin-right: auto; text-align:center;">
          <div>
            <form action="/universities/change_all_max" method="get" accept-charset="UTF-8" >
              <label for="change_lim" class="nominee-count-text" style = "font-size: 24px; color:black; margin-left: auto; margin-right: auto; padding-bottom: 15px;">Change Max Limit for All Universities: </label>
              <input id="change_lim" name="change_lim" type="number" />
              <input class="update-limit" id="limit-input-field" name="commit" type="submit" value="Change All Limits" />
            </form>
        </div>
      </div>
    </div>
  </div>
  </div>

  <br>

  <div class="row justify-content-center">
    <div class="col-auto">
      <table class="table center">
        <thead class="thread-dark">
          <tr>
            <th>University</th>
            <th>Nominees</th>
            <th>Limit</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @universities.each do |university| %>
            <tr>
              <td><%= university.university_name %></td>
              <td><%= university.num_nominees %></td>
              <td><%= university.max_limit %></td>
              <td><%= button_to 'Show', university, :class => "show-button", :method => :get %></td>
              <td><%= button_to 'Edit', edit_university_path(university), :class => "edit-button", :method => :get %></td>
              <td><%= button_to 'Delete', delete_university_path(university), :class => "delete-button", :method => :get %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Reset All', reset_all_universities_path %> |
      <%= link_to 'Clear All', clear_all_universities_path %>
    </div>
  </div>

  <div style="margin-left: 20%;">
    <%= button_to "New University", new_university_path, :class => "create-new-item-button", :method => :get %>
  </div>
</div>
