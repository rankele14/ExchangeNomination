<header style="margin-top: 0;">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3C0000; padding-top: 0;padding-bottom: 0;">
    <div class = "row" style="height:35px; padding-bottom: 0;">
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Back to Admin", admin_path, :class => "new-navbar-box", :method => :get %>
      </div>
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Help", admin_help_path, :class => "new-navbar-box", :method => :get %>
      </div>
    </div>
  <nav>
</header>

<div style="margin-top: 10px; padding-left: 30px; padding-right: 30px;">
  <p id="notice"><%= notice %></p>

  <h1>Nominators</h1>

  <hr style="height: 3px; border: 0px solid #696969; border-top-width: 1px;" >

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm-auto">
        <%= button_to "Universities", universities_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Nominators', nominators_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Students', students_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Questions', questions_path, :class => "data-button", :method => :get %>
      </div>
    </div>
  </div>

  <br>

  <div class="row justify-content-center">
    <div class="col-auto">
      <table class="table center">
        <thead class="thread-dark">
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Title</th>
            <th>University</th>
            <th>Email</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @nominators.each do |nominator| %>
            <tr>
              <td><%= nominator.first_name %></td>
              <td><%= nominator.last_name %></td>
              <td><%= nominator.title %></td>
              <td><%= University.find(nominator.university_id).university_name %></td>
              <td><%= nominator.nominator_email %></td>
              <td class="actions"><%= button_to 'Show', nominator_path(nominator), :class => "show-button action show", :method => :get %></td>
              <td><%= button_to 'Edit', edit_nominator_path(nominator), :class => "edit-button", :method => :get %></td>
              <td><%= button_to 'Delete', delete_nominator_path(nominator), :class => "delete-button", :method => :get %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Clear All', clear_all_nominators_path %>
    </div>
  </div>

  <div style="margin-top: 10px; margin-left: 10%;">
    <%= button_to "New Nominator", new_nominator_path, :class => "create-new-item-button", :method => :get %>
  </div>
</div>
