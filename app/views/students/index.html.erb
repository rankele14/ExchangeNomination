<header style="margin-top: 0;">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3C0000; padding-top: 0;padding-bottom: 0;">
    <div class = "row" style="height:35px; padding-bottom: 0;">
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Back to Admin", admin_path, :class => "new-navbar-box", :method => :get %>
      </div>
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Help", admin_help_path, :class => "new-navbar-box", :method => :get %>
      </div>
    </div>
  <nav>
</header>

<div style="margin-top: 10px; padding-left: 30px; padding-right: 30px;">
  <p id="notice"><%= notice %></p>

  <% content_for :title, "Student Database" %>

  <h1>Students</h1>

  <hr style="height: 3px; border: 0px solid #696969; border-top-width: 1px;" >

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm-auto">
        <%= button_to "Universities", universities_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Nominators', nominators_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Students', students_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Questions', questions_path, :class => "data-button", :method => :get %>
      </div>
    </div>
  </div>

  <br>

  <div class="row justify-content-center">
    <div class="col-auto">
      <table class="table center">
        <thead class="thread-dark">
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>University</th>
            <th>Nominator</th>
            <th>Degree level</th>
            <th>Major/Area of Study</th>
            <th>Term of exchange</th>
            <th>Email</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td><%= student.first_name %></td>
              <td><%= student.last_name %></td>
              <td><%= University.find(student.university_id).university_name %></td>
              <td><%= [Nominator.find(student.nominator_id).first_name, Nominator.find(student.nominator_id).last_name].join(' ') %></td>
              <td><%= student.degree_level %></td>
              <td><%= student.major %></td>
              <td><%= student.exchange_term %></td>
              <td><%= student.student_email %></td>
              <td><%= button_to 'Show', student, :class => "show-button", :method => :get %></td>
              <td><%= button_to 'Edit', edit_student_path(student), :class => "edit-button", :method => :get %></td>
              <td><%= button_to 'Delete', delete_student_path(student), :class => "delete-button", :method => :get %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <p><%= link_to 'Clear All', clear_all_students_path %></p>
    </div>
  </div>

  <div style="margin-left: 10%;">
    <%= button_to "Add New Student", new_student_path, :class => "create-new-item-button", :method => :get %>
  </div>
</div>
