<p id="notice"><%= notice %></p>

<% content_for :title, "Students: " + @student.first_name + " " + @student.last_name%>

<h2>Student</h2>
<br>

<p>
  <strong>First name:</strong>
  <%= @student.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @student.last_name %>
</p>

<p>
  <strong>University:</strong>
  <%= @university.university_name %>
</p>

<p>
  <strong>Nominator:</strong>
  <%= @representative.first_name %>
  <%= @representative.last_name %>
</p>

<p>
  <strong>Degree level</strong>
  <%= @student.degree_level %>
</p>

<p>
  <strong>Major/Area of Study</strong>
  <%= @student.major %>
</p>

<p>
  <strong>Term of exchange</strong>
  <%= @student.exchange_term %>
</p>

<p>
  <strong>Email</strong>
  <%= @student.student_email %>
</p>

<br>

<h2>Responses:</h2>
<% for response in @student.response %>
    <ul>
      <li><%= response.reply %></li>
  </ul>
<% end %>

<br>

<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Back', students_path %>
